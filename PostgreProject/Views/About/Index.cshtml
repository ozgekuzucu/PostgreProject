@model List<PostgreProject.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Hakkımızda Listesi</h2>

<a class="btn btn-primary" href="/About/Create">Yeni Hakkımızda Kaydı Ekle</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Alt Başlık</th>
            <th>Özellikler</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.SubTitle</td>
                    <td>
                        <ul class="mb-0">
                            @if (!string.IsNullOrWhiteSpace(item.Feature1))
                            {
                                <li>@item.Feature1</li>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Feature2))
                            {
                                <li>@item.Feature2</li>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Feature3))
                            {
                                <li>@item.Feature3</li>
                            }
                            @if (!string.IsNullOrWhiteSpace(item.Feature4))
                            {
                                <li>@item.Feature4</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a href="/About/Edit/@item.Id" class="btn btn-sm btn-warning">
                            <i class="mdi mdi-pencil"></i>
                        </a>
                        <a href="/About/Delete/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                            <i class="mdi mdi-delete"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Henüz herhangi bir kayıt bulunmuyor.</td>
            </tr>
        }
    </tbody>
</table>