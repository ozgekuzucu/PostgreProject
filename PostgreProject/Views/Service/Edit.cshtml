@model PostgreProject.Entities.Service
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Service Düzenle</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Icon</label>
        <input asp-for="Icon" class="form-control" />
    </div>

    <div class="form-group">
        <label>Service Başlığı</label>
        <input asp-for="ServiceTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Service Açıklaması</label>
        <textarea asp-for="ServiceDescription" class="form-control"></textarea>
    </div>

    <button class="btn btn-primary mt-2">Güncelle</button>
</form>
