@model List<PostgreProject.Entities.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Müşteri Yorumları</h2>

<a class="btn btn-primary" href="/Testimonial/Create">Yeni Yorum Ekle</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Fotoğraf</th>
            <th>Ad</th>
            <th>Unvan</th>
            <th>Yorum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" width="100" class="rounded" />
                </td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>

                <td>
                    <a class="btn btn-sm btn-warning" href="/Testimonial/Edit/@item.Id">
                        <i class="mdi mdi-pencil"></i>
                    </a>

                    <a class="btn btn-sm btn-danger" href="/Testimonial/Delete/@item.Id"
                       onclick="return confirm('Bu yorumu silmek istediğinize emin misiniz?')">
                        <i class="mdi mdi-delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

