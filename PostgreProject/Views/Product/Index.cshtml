@model List<PostgreProject.Dtos.ProductDtos.ResultProductDto>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Listesi</h2>

<a class="btn btn-primary" href="/Product/Create">Yeni Ürün Ekle</a>

<table class="table table-hover  mt-3">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Açıklama</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Resim</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.ProductName</td>
                            <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
                                @product.Description
                            </td>
                            <td>₺@product.ProductPrice</td>
                            <td>@product.ProductStock</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ProductImage))
                                {
                                    <img src="@product.ProductImage" alt="@product.ProductName" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                }
                            </td>
                            <td>
                                <a href="/Product/Edit/@product.Id" class="btn btn-sm btn-warning">
                                    <i class="mdi mdi-pencil"></i>
                                </a>
                                <a href="/Product/Delete/@product.Id" class="btn btn-sm btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                    <i class="mdi mdi-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
