@model List<PostgreProject.Entities.Testimonial>

@if (Model != null)
{
    <div class="container-xxl bg-light my-6 py-6 pb-0">
        <div class="container">
            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="text-primary text-uppercase mb-2">// Müşteri Yorumları</p>
                <h1 class="display-6 mb-4">20.000+ Müşteri Bize Güvendi</h1>
            </div>

            <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
                @foreach (var item in Model)
                {
                    <div class="testimonial-item bg-white rounded p-4">
                        <div class="d-flex align-items-center mb-4">
                            <img class="flex-shrink-0 rounded-circle border p-1" src="@item.ImageUrl" alt="">
                            <div class="ms-4">
                                <h5 class="mb-1">@item.Name</h5>
                                <span>@item.Title</span>
                            </div>
                        </div>
                        <p class="mb-0">@item.Comment</p>
                    </div>

                }

            </div>

            <div class="bg-primary text-light rounded-top p-5 my-6 mb-0 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <h1 class="display-4 text-light mb-0">Bültenimize Abone Olun</h1>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="position-relative">
                            <input class="form-control bg-transparent border-light w-100 py-3 ps-4 pe-5"
                                   type="text" placeholder="E-posta adresiniz">
                            <button type="button" class="btn btn-dark py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">
                                Abone Ol
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center py-5">
        <p class="text-muted">Yorum bilgisi bulunamadı.</p>
    </div>
}