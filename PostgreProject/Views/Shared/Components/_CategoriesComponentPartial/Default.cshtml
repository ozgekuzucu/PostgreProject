@model List<PostgreProject.Entities.Category>

@if (Model != null && Model.Any())
{
    <div class="container-xxl bg-light my-6 py-6 pt-0">
        <div class="container">
            <div class="bg-primary text-light rounded-bottom p-5 my-6 mt-0 wow fadeInUp" data-wow-delay="0.1s">
                <div class="row g-4 align-items-center">
                    <div class="col-lg-6">
                        <h1 class="display-4 text-light mb-0">Şehrinizdeki En İyi Pastane</h1>
                    </div>
                    <div class="col-lg-6 text-lg-end">
                        <div class="d-inline-flex align-items-center text-start">
                            <i class="fa fa-phone-alt fa-4x flex-shrink-0"></i>
                            <div class="ms-4">
                                <p class="fs-5 fw-bold mb-0">Bizi Arayın</p>
                                <p class="fs-1 fw-bold mb-0">+012 345 6789</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
                <p class="text-primary text-uppercase mb-2">// Ürünlerimiz</p>
                <h1 class="display-6 mb-4">Pastanemizin Kategorilerini Keşfedin</h1>
            </div>

            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="product-item d-flex flex-column bg-white rounded overflow-hidden h-100">
                            <div class="text-center p-4">
                                <div class="d-inline-block border border-primary rounded-pill px-3 mb-3">₺100 - ₺900</div>
                                <h3 class="mb-3">@item.CategoryName</h3>
                                <span>Özenle hazırlanan pastalarımızla özel anlarınıza tat katın.</span>
                            </div>
                            <div class="position-relative mt-auto">
                                <img class="img-fluid" src="@item.ImageUrl" alt="">
                                <div class="product-overlay">
                                    <a class="btn btn-lg-square btn-outline-light rounded-circle" href="">
                                        <i class="fa fa-eye text-primary"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center py-5">
        <p class="text-muted">Kategoriler bulunamadı.</p>
    </div>
}