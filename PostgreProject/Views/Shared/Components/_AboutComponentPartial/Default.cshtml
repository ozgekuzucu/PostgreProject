@model PostgreProject.Entities.About

@if (Model != null)
{
    <div class="container-xxl py-6">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="row img-twice position-relative h-100">
                        <div class="col-6">
                            <img class="img-fluid rounded" src="@Model.ImageUrl1" alt="@Model.Title">
                        </div>
                        <div class="col-6 align-self-end">
                            <img class="img-fluid rounded" src="@Model.ImageUrl2" alt="@Model.Title">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="h-100">
                        <p class="text-primary text-uppercase mb-2">// @Model.SubTitle</p>
                        <h1 class="display-6 mb-4">@Model.Title</h1>
                        <p>@Model.Description</p>
                        <div class="row g-2 mb-4">
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@Model.Feature1
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@Model.Feature2
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@Model.Feature3
                            </div>
                            <div class="col-sm-6">
                                <i class="fa fa-check text-primary me-2"></i>@Model.Feature4
                            </div>
                        </div>
                        <a class="btn btn-primary rounded-pill py-3 px-5" href="#contact">Daha Fazla Bilgi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center py-5">
        <p class="text-muted">Hakkımızda bilgisi bulunamadı.</p>
    </div>
}